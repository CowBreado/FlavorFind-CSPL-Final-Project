@model CS2ARonaldAbel_MVCPROJECT.BusLogic.Model.tblStudent;
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Add New Student</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddStudentFormSubmit" asp-controller="Student" method="post">             
                       <div>
                           <label for="FirstName">First Name</label>
                           <input required asp-for="FirstName" class="form-control" />
                           <span asp-validation-for="FirstName" class="text-danger"></span>
                       </div>
                       <div>
                           <label for="LastName">Last Name</label>
                           <input required asp-for="LastName" class="form-control" />
                           <span asp-validation-for="LastName" class="text-danger"></span>
                       </div>
                       <div>
                           <label for="Age">Age</label>
                           <input required asp-for="Age" class="form-control" type="number" />
                           <span asp-validation-for="Age" class="text-danger"></span>
                       </div>
                       <div>
                           <label for="Course">Course</label>
                           <input required asp-for="Course" class="form-control" />
                           <span asp-validation-for="Course" class="text-danger"></span>
                       </div>
                       <button type="submit" class="btn btn-primary">Add Student</button>
                    </form>

                    @section Scripts {
                        <partial name="_ValidationScriptsPartial" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("form").on("submit", function (e) {
        e.preventDefault();
        const formData = $(this).serialize();

        $.post("/Student/AddStudentFormSubmit", formData, function (response) {
            if (response.success) {
                window.location.href = "/Student/Index";
                alert(response.message)
            } else {
                alert(response.message);
            }
        });
    });
</script>