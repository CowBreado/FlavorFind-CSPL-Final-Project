<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FlavorFind</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/CS2ARonaldAbel_MVCPROJECT.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" style="min-height: 100vh;">
        <aside class="sidebar d-flex flex-column align-items-center p-3 text-white">
            <img src="~/images/logo.svg" alt="Logo" class="mb-4" style="width: 40px;" />
            <nav class="nav flex-column text-center w-100">
                <a class="nav-link text-white" asp-controller="Recipe" asp-action="Index" title="Home"><img src="~/images/home-logo.svg" alt="Logo" style="width: 46px;" /></a>
                <a class="nav-link text-white" asp-controller="AIRecipe" asp-action="Index" title="FlavorBot"><img src="~/images/flavorbot-logo.svg" alt="Logo" style="width: 31px;" /></a>
                <a class="nav-link text-white" asp-controller="Recipe" asp-action="Create" title="New Recipe"><img src="~/images/add-recipe-logo.svg" alt="Logo"  style="width: 46px;" /></a>
                <a class="nav-link text-white" asp-controller="AIRecipe" asp-action="Saved" title="Saved"><img src="~/images/save-logo.svg" alt="Logo" style="width: 46px;" /></a>
                <a class="nav-link text-white" asp-controller="AIRecipe" asp-action="Index" title="Profile"><img src="~/images/profile-logo.svg" alt="Logo" style="width: 46px;" /></a>

            </nav>
        </aside>

        <!-- Main content -->
        <main class="content flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
