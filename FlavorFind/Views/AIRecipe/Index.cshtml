@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script>
        document.getElementById("recipeForm").addEventListener("submit", function () {
            document.getElementById("loadingOverlay").style.display = "flex";
        });
    </script>
}

<div id="loadingOverlay">
    <div class="spinner"></div>
    <p class="loading-text">Generating your recipe...</p>
</div>

<div class="form-container container">
    <div class="logo-container">
        <img src="~/images/flavorbot-logo-with-text.svg" alt="FlavorBot" class="logo-image" />
    </div>

    <form method="post" id="recipeForm" novalidate class="form-box">
        <div class="form-group">
            <label for="Budget">Budget</label>
            <input type="text" name="Budget" id="Budget" placeholder="e.g. 500" />
        </div>

        <div class="form-group">
            <label for="Ingredients">Ingredients</label>
            <textarea name="Ingredients" id="Ingredients" rows="3" placeholder="e.g. chicken, garlic, soy sauce"></textarea>
        </div>

        <div class="form-group">
            <label for="Preferences">Preferences</label>
            <input type="text" name="Preferences" id="Preferences" placeholder="e.g. spicy, no dairy" />
        </div>

        <div class="form-group">
            <label for="DishType">Dish Type</label>
            <select name="DishType" id="DishType">
                <option>Filipino</option>
                <option>Italian</option>
                <option>Chinese</option>
                <option>Mexican</option>
            </select>
        </div>

        <div class="form-group">
            <label for="MealTime">Meal Time</label>
            <select name="MealTime" id="MealTime">
                <option>Breakfast</option>
                <option>Lunch</option>
                <option>Dinner</option>
                <option>Snack</option>
            </select>
        </div>

        <button type="submit" class="submit-btn">Generate Recipe</button>
    </form>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .form-container {
        width: 600px;
        border-radius: 24px;
        overflow: hidden;
        background-color: #262626;
        margin-top: 40px;
        padding: 30px;
    }

    .logo-container {
        margin-bottom: 20px;
        text-align: center;
    }

    .logo-image {
        width: 250px;
    }
    .form-group {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
    }

    label {
        margin-bottom: 5px;
        color: #ffffff;
        font-weight: bold;
    }

    input,
    textarea,
    select {
        background-color: #2b2b2b;
        border: 1px solid #555;
        color: #fff;
        padding: 10px;
        border-radius: 5px;
        font-size: 14px;
    }

    textarea {
        resize: vertical;
    }

    .submit-btn {
        width: 100%;
        padding: 12px;
        background-color: #f0ad4e;
        border: none;
        border-radius: 5px;
        color: #000;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 20px;
    }

    .submit-btn:hover {
        background-color: #ec9a2a;
    }

    #loadingOverlay {
        display: none;
        position: fixed;
        top: 0; left: 0; right: 0; bottom: 0;
        background-color: rgba(17, 17, 17, 0.95);
        z-index: 9999;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: white;
    }

    .spinner {
        width: 64px;
        height: 64px;
        border: 8px solid #f3f3f3;
        border-top: 8px solid #f0ad4e;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .loading-text {
        margin-top: 20px;
        font-size: 18px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>
