@model FlavorFind.BusLogic.Model.RecipeResponse
@{
    ViewData["Title"] = "FlavorBot Result";
}

<link rel="stylesheet" href="~/css/recipe-style.css" asp-append-version="true" />

<div class="container d-flex flex-column align-items-center mt-5">
    <div class="text-center mb-4">
        <img src="~/images/flavorbot-logo.png" alt="FlavorBot" style="width: 100px;" />
        <h2 class="text-white mt-2">Flavor<span class="text-danger">Bot</span></h2>
        <h5 class="text-light">You could go for...</h5>
    </div>

    <div class="recipe-content w-100" style="max-width: 900px;">
        @Html.Raw(Model.ReplyHtml)
    </div>

    <div class="mt-4 text-center">
        <a asp-controller="Recipe" asp-action="Index" class="btn btn-outline-warning fw-bold">← Generate Another</a>
    </div>
</div>
