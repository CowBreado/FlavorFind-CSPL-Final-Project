@model FlavorFind.BusLogic.Model.Recipe

@{
    ViewData["Title"] = "Create Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="recipe-create container">
    <h1>Create New Recipe</h1>

    <form asp-action="Create" asp-controller="Recipe" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ingredients"></label>
            <textarea asp-for="Ingredients" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Ingredients" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Instructions"></label>
            <textarea asp-for="Instructions" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Instructions" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<style>
    .recipe-create {
        width: 600px;
        border-radius: 24px;
        background-color: #111;
        padding: 30px;
        margin-top: 40px;
        color: #fff;
    }

    .recipe-create h1 {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        background-color: #1c1c1c;
        color: #fff;
        border: 1px solid #444;
    }

    .form-control:focus {
        background-color: #2b2b2b;
        border: 1px solid #555;
        color: #fff;
        padding: 10px;
        border-radius: 5px;
        font-size: 14px;
    }

    label {
        margin-bottom: 5px;
        color: #ffffff;
        font-weight: bold;
    }

    input,
    textarea,
    select {
        background-color: #2b2b2b;
        border: 1px solid #555;
        color: #fff;
        padding: 10px;
        border-radius: 5px;
        font-size: 14px;
    }

    textarea {
        resize: vertical;
    }

    .btn-primary {
        margin-right: 10px;
    }

    .container {
        width: 600px;
        border-radius: 24px;
        overflow: hidden;
        background-color: #262626;
        margin-top: 40px;
        padding: 30px;
    }

    .submit{
        width: 100%;
        padding: 12px;
        background-color: #f0ad4e;
        border: none;
        border-radius: 5px;
        color: #000;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 20px;
    }

    .submit:hover {
        background-color: #ec9a2a;
    }
    
</style>
